<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp">

    <TextView
        android:id="@+id/scroll_position_text_view"
        style="@style/current_page_text_view_style" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/card_view_style"
                app:cardBackgroundColor="@color/cardViewBackground"
                app:cardCornerRadius="@dimen/card_radius_4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16dp">

                    <Button
                        style="@style/save_dream_button"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/padding_20dp"
                        android:text="Save Dream" />

                    <TextView
                        android:id="@+id/dream_journal_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:text="Dream Journal"
                        android:textAllCaps="true"
                        android:textColor="@color/buttonColor"
                        android:textSize="@dimen/text_size_12sp" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/card_view_style"
                app:cardBackgroundColor="@color/cardViewBackground"
                app:cardCornerRadius="@dimen/card_radius_4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_16dp">

                    <ImageButton style="@style/error_image_button" />


                    <TextView
                        android:id="@+id/title_text_view"
                        style="@style/card_title_text_view"
                        android:text="Lucidity" />

                    <TextView
                        android:id="@+id/small_title_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_text_view"
                        android:layout_marginBottom="@dimen/margin_16dp"
                        android:text="Did you feel in control"
                        android:textAllCaps="true"
                        android:textColor="#9494A4"
                        android:textSize="@dimen/text_size_12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        style="@style/radio_group_container_layout_style"
                        android:layout_below="@+id/small_title_text_view">

                        <TextView
                            android:id="@+id/no_text_view"
                            style="@style/card_title_text_view"
                            android:layout_marginRight="@dimen/margin_8dp"
                            android:text="No" />

                        <RadioGroup
                            android:id="@+id/radio_group"
                            style="@style/radio_group_style">

                            <RadioButton
                                style="@style/first_radio_button"
                                android:textColor="@color/white"
                                android:layout_marginRight="@dimen/margin_8dp"/>

                            <RadioButton
                                style="@style/second_radio_button"
                                android:textColor="@color/white"
                                android:layout_marginRight="@dimen/margin_8dp"/>

                            <RadioButton
                                style="@style/third_radio_button"
                                android:textColor="@color/white"
                                android:layout_marginRight="@dimen/margin_8dp"/>

                            <RadioButton
                                style="@style/fourth_radio_button"
                                android:textColor="@color/white"
                                android:layout_marginRight="@dimen/margin_8dp"/>

                            <RadioButton
                                style="@style/fifth_radio_button"
                                android:textColor="@color/white" />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/very_text_view"
                            style="@style/card_title_text_view"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Very" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>