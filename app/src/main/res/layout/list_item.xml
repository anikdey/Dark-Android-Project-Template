<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view_style"
    app:cardBackgroundColor="@color/cardViewBackground"
    app:cardCornerRadius="@dimen/card_radius_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_16dp">

        <ImageButton style="@style/share_image_button" />

        <TextView
            android:id="@+id/tag_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:text="Dream Journal"
            android:textAllCaps="true"
            android:textColor="@color/buttonColorSkyBlue"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/title_text_view"
            style="@style/h1_text_view"
            android:layout_below="@+id/tag_text_view"
            android:text="July 31st" />

        <TextView
            android:id="@+id/content_text_view"
            style="@style/h2_text_view"
            android:layout_below="@+id/title_text_view"
            android:layout_marginBottom="0dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>