<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="current_page_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sans_serif</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="base_title_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description_text_view_style" parent="base_title_text_view_style">
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:text">@string/demo_text</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="base_rounded_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@android:color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="dream_recall_button" parent="base_rounded_button_style">
        <item name="android:layout_marginTop">@dimen/margin_40dp</item>
        <item name="android:background">@drawable/dream_recall_button_bg</item>
        <!--<item name="android:drawableRight">@drawable/arrow_right</item>-->
    </style>

    <style name="save_dream_button" parent="base_rounded_button_style">
        <item name="android:background">@drawable/dream_recall_button_bg</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="skip_guide_button" parent="base_rounded_button_style">
        <item name="android:layout_marginTop">@dimen/margin_40dp</item>
        <item name="android:background">@drawable/skip_guide_button_bg</item>
    </style>

    <style name="card_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
    </style>

    <style name="error_image_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/error</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="h1_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#C4C4CD</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="radio_group_container_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="radio_group_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="base_radio_button_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
    </style>

    <style name="first_radio_button" parent="base_rounded_button_style">
        <item name="android:background">@drawable/first_radio_button_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="second_radio_button" parent="base_rounded_button_style">
        <item name="android:background">@drawable/second_radio_button_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="third_radio_button" parent="base_rounded_button_style">
        <item name="android:background">@drawable/third_radio_button_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="fourth_radio_button" parent="base_rounded_button_style">
        <item name="android:background">@drawable/fourth_radio_button_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="fifth_radio_button" parent="base_rounded_button_style">
        <item name="android:background">@drawable/fifth_radio_button_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="square_shape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/square_shape</item>
        <item name="android:tint">@color/white</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="voice_recording" parent="square_shape">
        <item name="android:src">@drawable/baseline_mic_black_18</item>
    </style>

    <style name="photos" parent="square_shape">
        <item name="android:src">@drawable/baseline_add_black_18</item>
    </style>

</resources>
